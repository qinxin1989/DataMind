# 生产环境配置文件
# 复制到 .env 并修改相应值

# 应用配置
NODE_ENV=production
PORT=3000

# 数据库配置
DB_HOST=mysql
DB_PORT=3306
DB_USER=ai_platform
DB_PASSWORD=your_secure_password_change_me
DB_NAME=ai_platform

# JWT 配置
JWT_SECRET=your_jwt_secret_key_change_in_production_must_be_long_and_random
JWT_EXPIRES_IN=7d

# AI 配置 - 选择一个配置
# 通义千问配置
QWEN_API_KEY=your_qwen_api_key
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# 或者 SiliconFlow 配置
# SILICONFLOW_API_KEY=your_siliconflow_api_key
# SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1

# 或者 OpenAI 配置
# OPENAI_API_KEY=your_openai_api_key
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4o

# 文件上传配置
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 安全配置
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# OCR 服务配置（可选）
OCR_SERVICE_URL=http://localhost:5000
OCR_SERVICE_ENABLED=false