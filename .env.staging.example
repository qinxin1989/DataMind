# AI 数据问答平台 - 测试环境配置模板
# 复制此文件为 .env.staging 并填写实际值

# 应用配置
NODE_ENV=staging
PORT=3001
APP_NAME=AI数据问答平台(测试)
APP_URL=https://staging.your-domain.com

# 数据库配置
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ai_data_platform_staging
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=1

# JWT 配置
JWT_SECRET=your_jwt_secret_key_for_staging
JWT_EXPIRES_IN=7d

# 加密配置
ENCRYPTION_KEY=your_encryption_key_32_characters_long
ENCRYPTION_IV=your_encryption_iv_16_chars

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# 日志配置
LOG_LEVEL=debug
LOG_DIR=./logs

# CORS 配置
CORS_ORIGIN=https://staging.your-domain.com

# 会话配置
SESSION_SECRET=your_session_secret_for_staging
SESSION_MAX_AGE=86400000  # 24小时

# AI 服务配置
AI_API_URL=https://staging-ai-service.com/api
AI_API_KEY=your_ai_api_key_for_staging

# 邮件配置（可选）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@example.com

# 监控配置
ENABLE_MONITORING=true
MONITORING_INTERVAL=60000  # 60秒

# 性能配置
ENABLE_CACHE=true
CACHE_TTL=1800  # 30分钟

# 安全配置
ENABLE_CSRF=true
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW=60000  # 1分钟
RATE_LIMIT_MAX=100  # 100次/分钟（测试环境更宽松）

# 备份配置
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7
