{
  "name": "audit-log",
  "displayName": "审计日志",
  "version": "1.0.0",
  "description": "提供审计日志记录、查询、导出和统计功能",
  "author": "System",
  "license": "MIT",
  "type": "system",
  "category": "security",
  "tags": [
    "audit",
    "log",
    "security"
  ],
  "dependencies": {},
  "backend": {
    "entry": "./backend/index.ts",
    "routes": {
      "prefix": "/audit-log",
      "file": "./backend/routes.ts"
    }
  },
  "frontend": {
    "entry": "./frontend/index.ts",
    "routes": "./frontend/routes.ts"
  },
  "menus": [
    {
      "id": "audit-log-main",
      "title": "审计日志",
      "path": "/system/audit",
      "icon": "FileSearchOutlined",
      "parentId": "system-management",
      "sortOrder": 902,
      "permission": "audit:view"
    }
  ],
  "permissions": [
    {
      "code": "audit-log:view",
      "name": "查看审计日志",
      "description": "允许查看审计日志"
    },
    {
      "code": "audit-log:export",
      "name": "导出审计日志",
      "description": "允许导出审计日志"
    },
    {
      "code": "audit-log:manage",
      "name": "管理审计日志",
      "description": "允许删除和清理审计日志"
    }
  ],
  "api": {
    "endpoints": [
      {
        "method": "GET",
        "path": "/audit-log",
        "description": "获取审计日志列表",
        "permission": "audit-log:view"
      },
      {
        "method": "POST",
        "path": "/audit-log/export",
        "description": "导出审计日志",
        "permission": "audit-log:export"
      }
    ]
  },
  "enabled": true,
  "installed": true
}