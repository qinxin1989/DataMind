{
  "name": "file-tools",
  "displayName": "文件工具",
  "version": "1.0.0",
  "description": "提供文件格式转换、PDF合并、图片压缩等实用工具",
  "author": "System",
  "license": "MIT",
  "type": "tool",
  "category": "utility",
  "tags": [
    "file",
    "convert",
    "pdf",
    "image",
    "compress"
  ],
  "dependencies": {},
  "backend": {
    "entry": "./backend/index.ts",
    "routes": {
      "prefix": "/file-tools",
      "file": "./backend/routes.ts"
    }
  },
  "frontend": {
    "entry": "./frontend/index.ts",
    "routes": "./frontend/routes.ts"
  },
  "menus": [
    {
      "id": "file-tools-main",
      "title": "文件工具",
      "path": "/tools/file",
      "icon": "FileTextOutlined",
      "parentId": "tools-center",
      "sortOrder": 100,
      "permission": "file-tools:view"
    }
  ],
  "permissions": [
    {
      "code": "file-tools:view",
      "name": "查看文件工具",
      "description": "允许访问文件工具页面"
    },
    {
      "code": "file-tools:convert",
      "name": "文件转换",
      "description": "允许使用文件格式转换功能"
    },
    {
      "code": "file-tools:merge",
      "name": "PDF合并",
      "description": "允许使用PDF合并功能"
    },
    {
      "code": "file-tools:compress",
      "name": "图片压缩",
      "description": "允许使用图片压缩功能"
    },
    {
      "code": "file-tools:history",
      "name": "查看历史",
      "description": "允许查看文件转换历史记录"
    }
  ],
  "api": {
    "endpoints": [
      {
        "method": "POST",
        "path": "/file-tools/convert",
        "description": "文件格式转换",
        "permission": "file-tools:convert"
      },
      {
        "method": "POST",
        "path": "/file-tools/merge-pdf",
        "description": "PDF合并",
        "permission": "file-tools:merge"
      }
    ]
  },
  "enabled": true,
  "installed": true
}