{
  "id": "system-config",
  "name": "系统配置",
  "version": "1.0.0",
  "description": "提供系统配置管理、数据库配置、系统状态监控等功能",
  "author": "System",
  "license": "MIT",
  "main": "backend/index.ts",
  "frontend": "frontend/index.ts",
  "dependencies": [],
  "permissions": [
    {
      "code": "system-config:view",
      "name": "查看系统配置",
      "description": "允许查看系统配置和状态"
    },
    {
      "code": "system-config:manage",
      "name": "管理系统配置",
      "description": "允许修改系统配置"
    },
    {
      "code": "system-config:db-config",
      "name": "数据库配置",
      "description": "允许管理数据库配置"
    }
  ],
  "menus": [
    {
      "id": "system-config-main",
      "title": "系统配置",
      "path": "/system/config",
      "icon": "SettingOutlined",
      "parentId": null,
      "sort": 900,
      "permission": "system-config:view"
    },
    {
      "id": "system-status",
      "title": "系统状态",
      "path": "/system/status",
      "icon": "DashboardOutlined",
      "parentId": null,
      "sort": 901,
      "permission": "system-config:view"
    }
  ],
  "routes": {
    "backend": [
      {
        "path": "/api/modules/system-config",
        "method": "all"
      }
    ],
    "frontend": [
      {
        "path": "/system/config",
        "component": "views/SystemConfig.vue",
        "name": "SystemConfig",
        "meta": {
          "title": "系统配置",
          "permission": "system-config:view"
        }
      },
      {
        "path": "/system/status",
        "component": "views/SystemStatus.vue",
        "name": "SystemStatus",
        "meta": {
          "title": "系统状态",
          "permission": "system-config:view"
        }
      }
    ]
  },
  "config": {
    "schema": "config/schema.json",
    "default": "config/default.json"
  },
  "migrations": [
    {
      "version": "1.0.0",
      "file": "backend/migrations/001_create_system_config_tables.sql"
    }
  ]
}
