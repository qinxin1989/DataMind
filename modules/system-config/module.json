{
  "name": "system-config",
  "displayName": "系统配置",
  "version": "1.0.0",
  "description": "提供系统配置管理、数据库配置、系统状态监控等功能",
  "author": "System",
  "license": "MIT",
  "type": "system",
  "category": "configuration",
  "tags": [
    "config",
    "system",
    "database",
    "monitoring"
  ],
  "dependencies": {},
  "backend": {
    "entry": "./backend/index.ts",
    "routes": {
      "prefix": "/system-config",
      "file": "./backend/routes.ts"
    }
  },
  "frontend": {
    "entry": "./frontend/index.ts",
    "routes": "./frontend/routes.ts"
  },
  "menus": [
    {
      "id": "system-config-main",
      "title": "系统配置",
      "path": "/system/config",
      "icon": "SettingOutlined",
      "parentId": "system-management",
      "sortOrder": 900,
      "permission": "system-config:view"
    },
    {
      "id": "system-status",
      "title": "系统状态",
      "path": "/system/status",
      "icon": "DashboardOutlined",
      "parentId": "system-management",
      "sortOrder": 901,
      "permission": "system-config:view"
    }
  ],
  "permissions": [
    {
      "code": "system-config:view",
      "name": "查看系统配置",
      "description": "允许查看系统配置和状态"
    },
    {
      "code": "system-config:manage",
      "name": "管理系统配置",
      "description": "允许修改系统配置"
    },
    {
      "code": "system-config:db-config",
      "name": "数据库配置",
      "description": "允许管理数据库配置"
    }
  ],
  "api": {
    "endpoints": [
      {
        "method": "GET",
        "path": "/system-config",
        "description": "获取系统配置",
        "permission": "system-config:view"
      },
      {
        "method": "PUT",
        "path": "/system-config",
        "description": "更新系统配置",
        "permission": "system-config:manage"
      }
    ]
  },
  "enabled": true,
  "installed": true
}