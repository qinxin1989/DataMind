{
  "name": "official-doc",
  "displayName": "公文写作",
  "version": "1.0.0",
  "description": "AI辅助公文写作工具，支持工作报告、通知公告、会议纪要等多种公文类型",
  "author": "System",
  "license": "MIT",
  "type": "tool",
  "category": "document",
  "tags": [
    "document",
    "writing",
    "ai",
    "official"
  ],
  "dependencies": {
    "ai-config": "^1.0.0"
  },
  "backend": {
    "entry": "./backend/index.ts",
    "routes": {
      "prefix": "/official-doc",
      "file": "./backend/routes.ts"
    }
  },
  "frontend": {
    "entry": "./frontend/index.ts",
    "routes": "./frontend/routes.ts"
  },
  "menus": [
    {
      "id": "official-doc-main",
      "title": "公文写作",
      "path": "/tools/official-doc",
      "icon": "FileTextOutlined",
      "parentId": "tools-center",
      "sortOrder": 120,
      "permission": "official-doc:view"
    }
  ],
  "permissions": [
    {
      "code": "official-doc:view",
      "name": "查看公文写作",
      "description": "允许访问公文写作页面"
    },
    {
      "code": "official-doc:generate",
      "name": "生成公文",
      "description": "允许使用AI生成公文"
    },
    {
      "code": "official-doc:template",
      "name": "模板管理",
      "description": "允许管理公文模板"
    },
    {
      "code": "official-doc:history",
      "name": "查看历史",
      "description": "允许查看公文生成历史"
    },
    {
      "code": "official-doc:export",
      "name": "导出公文",
      "description": "允许导出公文为Word格式"
    }
  ],
  "api": {
    "endpoints": [
      {
        "method": "POST",
        "path": "/official-doc/generate",
        "description": "生成公文",
        "permission": "official-doc:generate"
      },
      {
        "method": "GET",
        "path": "/official-doc/templates",
        "description": "获取模板列表",
        "permission": "official-doc:template"
      }
    ]
  },
  "enabled": true,
  "installed": true
}