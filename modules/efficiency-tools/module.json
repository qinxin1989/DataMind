{
  "name": "efficiency-tools",
  "displayName": "效率工具",
  "version": "1.0.0",
  "description": "提供SQL格式化、数据转换、正则助手等开发效率工具",
  "author": "System",
  "license": "MIT",
  "type": "tool",
  "category": "development",
  "tags": [
    "tools",
    "efficiency",
    "sql",
    "regex"
  ],
  "dependencies": {},
  "backend": {
    "entry": "./backend/index.ts",
    "routes": {
      "prefix": "/efficiency-tools",
      "file": "./backend/routes.ts"
    }
  },
  "frontend": {
    "entry": "./frontend/index.ts",
    "routes": "./frontend/routes.ts"
  },
  "menus": [
    {
      "id": "efficiency-tools-main",
      "title": "效率工具",
      "path": "/tools/efficiency",
      "icon": "ThunderboltOutlined",
      "parentId": "tools-center",
      "sortOrder": 110,
      "permission": "efficiency-tools:view"
    }
  ],
  "permissions": [
    {
      "code": "efficiency-tools:view",
      "name": "查看效率工具",
      "description": "允许访问效率工具页面"
    },
    {
      "code": "efficiency-tools:sql-format",
      "name": "SQL格式化",
      "description": "允许使用SQL格式化功能"
    },
    {
      "code": "efficiency-tools:data-convert",
      "name": "数据转换",
      "description": "允许使用数据转换功能"
    },
    {
      "code": "efficiency-tools:regex",
      "name": "正则助手",
      "description": "允许使用正则表达式助手"
    },
    {
      "code": "efficiency-tools:template",
      "name": "模板管理",
      "description": "允许管理常用模板"
    }
  ],
  "api": {
    "endpoints": [
      {
        "method": "POST",
        "path": "/efficiency-tools/sql-format",
        "description": "SQL格式化",
        "permission": "efficiency-tools:sql-format"
      },
      {
        "method": "POST",
        "path": "/efficiency-tools/data-convert",
        "description": "数据转换",
        "permission": "efficiency-tools:data-convert"
      }
    ]
  },
  "enabled": true,
  "installed": true
}