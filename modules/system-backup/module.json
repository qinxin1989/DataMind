{
  "name": "system-backup",
  "displayName": "系统备份",
  "version": "1.0.0",
  "description": "提供系统数据备份、恢复、验证和导出功能",
  "author": "System",
  "license": "MIT",
  "type": "system",
  "category": "maintenance",
  "tags": [
    "backup",
    "restore",
    "system",
    "data"
  ],
  "dependencies": {},
  "backend": {
    "entry": "./backend/index.ts",
    "routes": {
      "prefix": "/system-backup",
      "file": "./backend/routes.ts"
    }
  },
  "frontend": {
    "entry": "./frontend/index.ts",
    "routes": "./frontend/routes.ts"
  },
  "menus": [
    {
      "id": "system-backup-main",
      "title": "备份恢复",
      "path": "/system/backup",
      "icon": "CloudServerOutlined",
      "parentId": "system-management",
      "sortOrder": 903,
      "permission": "system-backup:view"
    }
  ],
  "permissions": [
    {
      "code": "system-backup:view",
      "name": "查看备份",
      "description": "允许查看备份列表"
    },
    {
      "code": "system-backup:create",
      "name": "创建备份",
      "description": "允许创建系统备份"
    },
    {
      "code": "system-backup:restore",
      "name": "恢复备份",
      "description": "允许恢复系统备份"
    },
    {
      "code": "system-backup:delete",
      "name": "删除备份",
      "description": "允许删除备份文件"
    }
  ],
  "api": {
    "endpoints": [
      {
        "method": "GET",
        "path": "/system-backup",
        "description": "获取备份列表",
        "permission": "system-backup:view"
      },
      {
        "method": "POST",
        "path": "/system-backup",
        "description": "创建备份",
        "permission": "system-backup:create"
      }
    ]
  },
  "enabled": true,
  "installed": true
}