{
  "id": "dashboard",
  "name": "大屏管理",
  "version": "1.0.0",
  "description": "数据大屏配置和管理模块，支持大屏创建、布局设计、图表配置和发布",
  "author": "System",
  "license": "MIT",
  "main": "backend/index.ts",
  "frontend": "frontend/index.ts",
  "permissions": [
    {
      "id": "dashboard:view",
      "name": "查看大屏",
      "description": "允许查看大屏列表和详情"
    },
    {
      "id": "dashboard:create",
      "name": "创建大屏",
      "description": "允许创建新的大屏"
    },
    {
      "id": "dashboard:edit",
      "name": "编辑大屏",
      "description": "允许编辑大屏配置"
    },
    {
      "id": "dashboard:publish",
      "name": "发布大屏",
      "description": "允许发布和取消发布大屏"
    },
    {
      "id": "dashboard:manage",
      "name": "管理大屏",
      "description": "允许管理所有大屏（包括删除）"
    }
  ],
  "menus": [
    {
      "id": "dashboard-main",
      "title": "大屏管理",
      "path": "/system/dashboard",
      "icon": "DashboardOutlined",
      "order": 905,
      "permission": "dashboard:view"
    }
  ],
  "dependencies": [],
  "config": {
    "schema": "config/schema.json",
    "default": "config/default.json"
  }
}
